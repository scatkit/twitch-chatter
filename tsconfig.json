{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "module": "nodenext",
    "target": "esnext",
    "sourceMap": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  }
}
